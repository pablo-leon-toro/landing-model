import logo_lm from "favicon-lm.svg"; */
import Btn00 from "src/components/atoms/Btn00.astro";

---

<section class="hero" id="hero">
    <div class="hero-content">

        <div class="left">
            <h1>Landing Model</h1>
            <p>Un modelo de landing page para comenzar tus <strong>proyectos de Astro</strong>. Estructura solida, comienzo seguro y mucho m√°s.</p>
            <Btn00 href="#textos" body="Comenzar" />
        </div>

        <div class="right">
           <!--  <Image
                class="landing-model-logo"
                id="landing-model-logo"
                src={logo_lm}
                alt="Landing Model"
            /> -->
        </div>
    </div>
</section>

<style>
    /* Hero Section */
    section.hero {
        width: var(--maxw-b);
        margin: 0 auto;
        padding: var(--global-pad) 0;
        overflow: hidden;
        background: var(--gradient-v1);

    }

    .hero-content {

        width: var(--maxw-c);
        margin: 0 auto;
        display: grid;
        grid-template-columns: 48% 48%;
        gap: 4%;
    }

    h1 {
        font-size: var(--txt-fs-h1-l);
    }

    p {
        font-size: var(--txt-fs-p-xl);
        line-height: 1.4;
    }

    .left, .right {
        width: 100%;
        padding: var(--global-pad);
        
    }

    .left{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }

    .right{
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .landing-model-logo {
        margin: 0;
        padding: var(--global-pad);
        width: 100%;
        height: 100%;
        max-width: 600px;
        object-fit: contain;
    }

    @media (width < 768px) {
        .hero-content {
            grid-template-columns: 1fr;
            grid-template-rows: auto auto;
            gap: 0;
        }

        .landing-model-logo {
            max-width: 260px;
            height: auto;
        }

        .left {
            text-align: center;
            align-items: center;
        }
    }

</style>